<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".WelcomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:padding="25dp"
        android:text="Welcome to Mood Journal App!"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/welcome"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Track your mood daily and reflect on\n your emotions."
        android:textAlignment="center"
        android:textColor="#fce205"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:id="@+id/buttonDailyMood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/white"
        android:text="Track Your Mood"
        android:textSize="18dp"
        android:textColor="#fe7d6a" />
</LinearLayout>


